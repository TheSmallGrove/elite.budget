<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elite.Budget.Mobile.App">
    <Application.Resources>
        <Style x:Key="SidebarHeader" TargetType="Grid">
            <Setter Property="BackgroundColor" Value="Black"></Setter>
        </Style>
        <Style x:Key="SidebarHeaderLabel" TargetType="Label">
            <Setter Property="Margin" Value="8"></Setter>
            <Setter Property="FontSize" Value="24"></Setter>
            <Setter Property="VerticalTextAlignment" Value="Center"></Setter>
            <Setter Property="HeightRequest" Value="40"></Setter>
        </Style>
        <Style x:Key="SidebarList" TargetType="ListView">
            <Setter Property="SelectionMode" Value="Single"></Setter>
        </Style>
        <Style x:Key="SidebarListItem" TargetType="Grid">
            <Setter Property="Padding" Value="5,10"></Setter>
        </Style>
        <Style x:Key="SidebarListItemIcon" TargetType="Image">
            <Setter Property="WidthRequest" Value="32"></Setter>
            <Setter Property="HeightRequest" Value="32"></Setter>
        </Style>
        <Style x:Key="SidebarListItemText" TargetType="Label">
            <Setter Property="FontSize" Value="20"></Setter>
        </Style>
    </Application.Resources>
</Application>